<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<div>
  <% if user_signed_in? %>
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe)%> |
  <% end %>
  <%= link_to "Back to recipes", recipes_path %>
  <% if user_signed_in? %>
    <%= button_to "Destroy this recipe", @recipe, method: :delete, class: 'btn btn-danger' %>
  <% end %>
</div>
